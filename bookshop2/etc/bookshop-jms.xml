<?xml version="1.0" encoding="UTF-8"?>

<messaging-deployment xmlns="urn:jboss:messaging-deployment:1.0">
	<hornetq-server>
		<jms-destinations>
			<!-- bookshop buyer application destinations -->
			<jms-queue name="public_buyer_order_books_queue">
				<entry name="/queue/public_buyer_order_books_queue" />
			</jms-queue>
			<jms-queue name="public_buyer_order_accepted_queue">
				<entry name="/queue/public_buyer_order_accepted_queue" />
			</jms-queue>
			<jms-queue name="public_buyer_order_rejected_queue">
				<entry name="/queue/public_buyer_order_rejected_queue" />
			</jms-queue>
			<jms-queue name="public_buyer_purchase_accepted_queue">
				<entry name="/queue/public_buyer_purchase_accepted_queue" />
			</jms-queue>
			<jms-queue name="public_buyer_purchase_rejected_queue">
				<entry name="/queue/public_buyer_purchase_rejected_queue" />
			</jms-queue>

			<!-- bookshop seller application destinations -->
			<jms-queue name="protected_seller_order_books_queue">
				<entry name="/queue/protected_seller_order_books_queue" />
			</jms-queue>
			<jms-queue name="protected_seller_purchase_books_queue">
				<entry name="/queue/protected_seller_purchase_books_queue" />
			</jms-queue>
			<jms-queue name="protected_seller_books_available_queue">
				<entry name="/queue/protected_seller_books_available_queue" />
			</jms-queue>
			<jms-queue name="protected_seller_books_unavailable_queue">
				<entry name="/queue/protected_seller_books_unavailable_queue" />
			</jms-queue>

		</jms-destinations>
	</hornetq-server>
</messaging-deployment>
