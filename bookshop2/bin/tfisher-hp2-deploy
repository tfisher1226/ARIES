#!/bin/sh

. ./tfisher-hp2-env

#rm -f $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_EAR_FILE*
rm -f $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_JMS_FILE*
rm -f $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_DS_FILE*
rm -f $JBOSS_DEPLOYMENT_HOME/$ADMIN_JMS_FILE*
rm -f $JBOSS_DEPLOYMENT_HOME/$ADMIN_DS_FILE*

#cp $BOOKSHOP2_EAR_HOME/target/$BOOKSHOP2_EAR_FILE $JBOSS_DEPLOYMENT_HOME
cp $BOOKSHOP2_HOME/deploy/$BINDING_HOST/$BOOKSHOP2_JMS_FILE $JBOSS_DEPLOYMENT_HOME
cp $BOOKSHOP2_HOME/deploy/$BINDING_HOST/$BOOKSHOP2_DS_FILE $JBOSS_DEPLOYMENT_HOME
cp $BOOKSHOP2_HOME/deploy/$BINDING_HOST/$ADMIN_JMS_FILE $JBOSS_DEPLOYMENT_HOME
cp $BOOKSHOP2_HOME/deploy/$BINDING_HOST/$ADMIN_DS_FILE $JBOSS_DEPLOYMENT_HOME

#chmod 644 $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_EAR_FILE
chmod 644 $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_JMS_FILE
chmod 644 $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_DS_FILE
chmod 644 $JBOSS_DEPLOYMENT_HOME/$ADMIN_JMS_FILE
chmod 644 $JBOSS_DEPLOYMENT_HOME/$ADMIN_DS_FILE

touch $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_EAR_FILE.dodeploy
touch $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_JMS_FILE.dodeploy
touch $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_DS_FILE.dodeploy
touch $JBOSS_DEPLOYMENT_HOME/$ADMIN_JMS_FILE.dodeploy
touch $JBOSS_DEPLOYMENT_HOME/$ADMIN_DS_FILE.dodeploy

chmod 644 $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_EAR_FILE.dodeploy
chmod 644 $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_JMS_FILE.dodeploy
chmod 644 $JBOSS_DEPLOYMENT_HOME/$BOOKSHOP2_DS_FILE.dodeploy
chmod 644 $JBOSS_DEPLOYMENT_HOME/$ADMIN_JMS_FILE.dodeploy
chmod 644 $JBOSS_DEPLOYMENT_HOME/$ADMIN_DS_FILE.dodeploy

