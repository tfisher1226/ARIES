#!/bin/sh

. ./thebes-env


#
# Local settings
#

LOCAL_WORKSPACE=/c/workspace/ARIES2

LOCAL_BOOKSHOP2_HOME=$LOCAL_WORKSPACE/bookshop2

LOCAL_BOOKSHOP2_EAR_FILE=$LOCAL_BOOKSHOP2_HOME/bookshop2-app/target/$BOOKSHOP2_EAR_FILE

#LOCAL_BOOKSHOP2_DS_FILE=$LOCAL_BOOKSHOP2_HOME/deploy/$HOST/$BOOKSHOP2_DS_FILE

LOCAL_BOOKSHOP2_JMS_FILE=$LOCAL_BOOKSHOP2_HOME/deploy/$HOST/$BOOKSHOP2_JMS_FILE

LOCAL_ADMIN_DS_FILE=$LOCAL_BOOKSHOP2_HOME/deploy/$HOST/$ADMIN_DS_FILE

LOCAL_ADMIN_JMS_FILE=$LOCAL_BOOKSHOP2_HOME/deploy/$HOST/$ADMIN_JMS_FILE

USER=sgiusa

REMOTE_ADDRESS=$USER@$HOST

REMOTE_PATH=$REMOTE_ADDRESS:$JBOSS_DEPLOYMENT_HOME

scp $LOCAL_ADMIN_DS_FILE \
	$LOCAL_ADMIN_JMS_FILE \
	$LOCAL_BOOKSHOP2_JMS_FILE \
	$LOCAL_BOOKSHOP2_EAR_FILE \
	$REMOTE_PATH

