<?xml version="1.0" encoding="UTF-8"?>

<config>
	<TCP bind_addr="localhost" bind_port="7800" />

	<TCPPING timeout="3000" initial_hosts="localhost[7800],localhost[7800]" 
		port_range="10" num_initial_members="1" up_thread="true" down_thread="true"/>

	<VERIFY_SUSPECT timeout="1500" />

	<pbcast.NAKACK use_mcast_xmit="false" gc_lag="100" 
		retransmit_timeout="300,600,1200,2400,4800" discard_delivered_msgs="true" />

	<pbcast.STABLE stability_delay="1000" desired_avg_gossip="50000"
		max_bytes="400000" />

	<pbcast.GMS print_local_addr="true" join_timeout="5000"
		shun="false" view_bundling="true" />
</config>
