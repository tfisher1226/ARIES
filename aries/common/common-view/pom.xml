						<include>**/*.tld</include>
						<include>**/*.css</include>
						<include>**/*.js</include>
						<include>**/*.class</include>
						<include>**/*.gif</include>
						<include>**/*.jpg</include>
						<include>**/*.png</include>
						<include>**/*.ico</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>
			
