			<type>test-jar</type>
		</dependency>
		
		<dependency>
			<groupId>org.aries</groupId>
			<artifactId>common-transaction</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
