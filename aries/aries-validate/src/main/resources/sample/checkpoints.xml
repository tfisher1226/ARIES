<?xml version="1.0" encoding="UTF-8"?>

<checkpoints
	xmlns="http://www.aries.org/validate/0.0.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.aries.org/validate/0.0.1 file:/workspace/ARIES/aries-validate/source/main/resources/schema/aries-validate-0.0.1.xsd">

	<version>0.0.1</version>
	<disable>false</disable>
	
	<checkpoint>
		<name>initiateEcho</name>
		<condition>
			<enabled>true</enabled>
			<forced>false</forced>
			<expression>$request/input</expression>
			<exception>java.lang.RuntimeException</exception>
			<message>EchoString must be specified</message>
		</condition>
	</checkpoint>
</checkpoints>
